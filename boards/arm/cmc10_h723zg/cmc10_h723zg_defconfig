CONFIG_SOC_SERIES_STM32H7X=y
CONFIG_SOC_STM32H723XX=y

# Enable MPU
CONFIG_ARM_MPU=y

# Enable HW stack protection
CONFIG_HW_STACK_PROTECTION=y

# Enable UART
CONFIG_SERIAL=y

# Console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# Enable Pinmux
CONFIG_PINMUX=y
CONFIG_GPIO=y

# Clock Configuration
CONFIG_SYS_CLOCK_HW_CYCLES_PER_SEC=550000000
CONFIG_CLOCK_CONTROL=y
# Use HSE as PLL input
CONFIG_CLOCK_STM32_HSE_CLOCK=25000000
CONFIG_CLOCK_STM32_PLL_SRC_HSE=y
CONFIG_CLOCK_STM32_SYSCLK_SRC_PLL=y
# Configure PLL
CONFIG_CLOCK_STM32_PLL_M_DIVISOR=2
CONFIG_CLOCK_STM32_PLL_N_MULTIPLIER=44
CONFIG_CLOCK_STM32_PLL_P_DIVISOR=1
CONFIG_CLOCK_STM32_PLL_Q_DIVISOR=2
CONFIG_CLOCK_STM32_PLL_R_DIVISOR=2
# Configure System Clocks
CONFIG_CLOCK_STM32_D1CPRE=1
# HCLK: 275MHz
CONFIG_CLOCK_STM32_HPRE=2
# APB1: 137.5MHz
CONFIG_CLOCK_STM32_D2PPRE1=2
# APB2: 137.5MHz
CONFIG_CLOCK_STM32_D2PPRE2=2
# APB3: 137.5MHz
CONFIG_CLOCK_STM32_D1PPRE=2
# APB4: 137.5MHz
CONFIG_CLOCK_STM32_D3PPRE=2

CONFIG_FLASH_ALIGNMENT_WORD_SIZE_BYTES=32
